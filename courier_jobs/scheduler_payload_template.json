{
  "name": "REQ_NUMBER_PLACEHOLDER",
  "description": "Identifies the vulnerabilities on the servers",
  "scheduleRule": "immediate",
  "exceptionRules": [],
  "target": {
    "executionType": "parallel",
    "groups": [
      {
        "timeoutSeconds": 600,
        "batchSize": { "type": "number", "value": 5 },
        "distributionMethod": "batching",
        "successCriteria": [
          { "numRuns": { "type": "percent", "value": 100 }, "status": "success" }
        ],
        "nodeListType": "nodes",
        "nodeIdentifiers": ["NODE_ID_PLACEHOLDER"]
      }
    ]
  },
  "actions": {
    "accessMode": "agent",
    "steps": [
      {
        "name": "Execute Compliance Run",
        "interpreter": {
          "skill": { "minVersion": "1.0.0" },
          "name": "chef-platform/shell-interpreter"
        },
        "command": {
          "linux": [
            "echo '{\"requestNumber\": \"REQ_NUMBER_PLACEHOLDER\"}' > /tmp/REQ_NUMBER_PLACEHOLDER.json",
            "[ ! -f /home/ubuntu/create_mount_s3.sh ] || sudo rm -f /home/ubuntu/create_mount_s3.sh",
            "sudo wget -P /home/ubuntu/ https://raw.githubusercontent.com/prohealops/req_mgmt/refs/heads/main/lib/create_mount_s3.sh",
            "sudo chmod +x /home/ubuntu/create_mount_s3.sh",
            "sudo /home/ubuntu/create_mount_s3.sh",
            "echo 'Sleeping for 2 minutes before sanity check...'",
            "sleep 120",
            "[ ! -f /home/ubuntu/sanity_mount_s3.sh ] || sudo rm -f /home/ubuntu/sanity_mount_s3.sh",
            "sudo wget -P /home/ubuntu/ https://raw.githubusercontent.com/prohealops/req_mgmt/refs/heads/main/lib/sanity_mount_s3.sh",
            "sudo chmod +x /home/ubuntu/sanity_mount_s3.sh",
            "echo \"DEBUG: Starting sanity check with request number: REQ_NUMBER_PLACEHOLDER\" > /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log",
            "echo \"Parameters: REQ_NUMBER_PLACEHOLDER msZkE*-Z7Xq9\" >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log",
            "echo \"Mount status before sanity:\" >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log",
            "mount | grep s3fs >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log 2>&1",
            "echo \"======================= EXECUTING SANITY SCRIPT ======================\" >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log",
            "sudo /home/ubuntu/sanity_mount_s3.sh REQ_NUMBER_PLACEHOLDER msZkE*-Z7Xq9 2>&1 | tee -a /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log",
            "SANITY_RESULT=$?",
            "echo \"Sanity script return code: $SANITY_RESULT\" >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log",
            "echo \"======================= SANITY OUTPUT LOG ======================\" >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log",
            "if [ -f /var/log/s3_mount_sanity.log ]; then cat /var/log/s3_mount_sanity.log >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log; else echo \"No sanity log found\" >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log; fi",
            "if [ $SANITY_RESULT -eq 0 ]; then echo \"Sanity check SUCCEEDED\" >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log; else echo \"Sanity check FAILED\" >> /tmp/sanity_debug_REQ_NUMBER_PLACEHOLDER.log; fi"
          ]
        },
        "inputs": {},
        "expectedInputs": {},
        "outputFieldRules": {},
        "retryCount": 1,
        "failureBehavior": {
          "action": "retryThenIgnore",
          "retryBackoffStrategy": { "type": "linear", "delaySeconds": 1, "arguments": [1, 3, 5] }
        },
        "limits": {},
        "conditions": []
      }
    ]
  }
}